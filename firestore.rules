rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
match /conversations/{convoId} {
  // Only users in the participants array can read or write to this chat
  allow read, write: if request.auth.uid in resource.data.participants;
  
  match /messages/{messageId} {
    allow read, write: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(convoId)).data.participants;
  }
}
service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles: Publicly readable, only owner can write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // eChat: Only participants can access
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
    }
    // Global Pulse: Only the Admin (You) can broadcast
    match /broadcasts/{pulseId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'your-email@yale.edu'; 
    }
  }
}
